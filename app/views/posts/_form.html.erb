<% if @post.photo.image.present? %>
<%= image_tag(@post.photo.image.thumb.url, class: "thumbnail") %>
<% end %>
<%= simple_form_for @post do |f| %>
<%= f.input :title, class: "form-control" %>
<%= f.input :link, class: "form-control" %>
<%= f.input :description, class: "form-control" %>
<%= f.simple_fields_for :photo do |c| %>
<%= c.input :image, as: :file %>
<% end %>
<%= f.submit "送出", disable_with: "submitting...", class: "btn btn-primary" %>
<% end %>
